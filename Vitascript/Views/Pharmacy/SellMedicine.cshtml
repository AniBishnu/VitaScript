@model IEnumerable<Vitascript.DTOs.PrescriptionViewDTO>
@{
    ViewBag.Title = "SellMedicine";
    Layout = "~/Views/Shared/_LayoutPage_Portal.cshtml";
}
<link rel="stylesheet" href="~/Content/Doctor CSS/MyPatients.css" />
<link rel="stylesheet" href="~/Content/Admin CSS/Navbar.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet" />
<body>
    <div class="MainWrapper">
        <div class="NavdivWrapper">
            <a href="@Url.Action("Index", "Pharmacy")">Home</a>
            <a href="@Url.Action("SellMedicine", "Pharmacy")">Sell Medicines</a>
            <a href="@Url.Action("Inventory", "Pharmacy")">Inventory</a>
            <a href="@Url.Action("Sales", "Pharmacy")">Sales</a>
            <a href="@Url.Action("PharmacyProfile", "Pharmacy")">Profile</a>
        </div>
        <div class="DivBody">
            <div class="filter-dropdown">

            </div>
            <h2>Presciption List</h2>
            <br />

            <!-- Patient List -->
            <div class="patient-list" id="patientList">
                <table class="patient-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Prescription Code</th>
                            <th>Prescription date</th>
                            <th>Prescribed by</th>
                            <th>Prescribed to</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var prescription in Model)
                            {
                                <tr>
                                    <td>@prescription.Id</td>
                                    <td><a href="@Url.Action("PrescriptionDetails", "Admin", new { id = prescription.Id })">@prescription.PrescriptionCode</a></td>
                                    <td>@prescription.IssuedDate.ToString("dd MMM yyyy")</td>
                                    <td>Dr. @prescription.DoctorName</td>
                                    <td>@prescription.PatientName</td>
                                    <td>
                                        <a class="action-button" href="@Url.Action("ProvideMedicine", "Pharmacy", new { id = prescription.Id})">
                                            Provide Medicine
                                        </a>
                                    </td>

                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" style="text-align: center;">No prescriptions found.</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

</body>

<style>
    .action-button {
        background-color: #fca311;
        color: black;
        border: none;
        padding: 6px 12px;
        font-size: 14px;
        border-radius: 4px;
        cursor: pointer;
    }
</style>