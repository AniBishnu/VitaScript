@model Vitascript.Models.User

@{
    ViewBag.Title = "Pharmacy Profile";
    Layout = "~/Views/Shared/_LayoutPage_Portal.cshtml";
}

<link rel="stylesheet" href="~/Content/Doctor CSS/Doctor.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/Doctor CSS/Profile.css" />

<div class="MainWrapper">
    <div class="NavdivWrapper">
        <a href="@Url.Action("Index", "Pharmacy")">Home</a>
        <a href="@Url.Action("SellMedicine", "Pharmacy")">Sell Medicines</a>
        <a href="@Url.Action("Inventory", "Pharmacy")">Inventory</a>
        <a href="@Url.Action("Sales", "Pharmacy")">Sales</a>
        <a href="@Url.Action("PharmacyProfile", "Pharmacy")">Profile</a>
    </div>

    <div class="DivBody">
        <div class="profile-container">
            <div class="profile-left">
                <i class="fas fa-prescription-bottle-medical fa-10x doctor-icon"></i>
            </div>

            <div class="profile-right">
                <div class="profile-header">
                    <div>
                        <h1 class="doctor-name">@Model.Name</h1>
                        <h4 class="doctor-specialty">
                            @if (Model.Pharmacy != null)
                            {
                                @Model.Pharmacy.PharmacyName
                            }
                            else
                            {
                                <span>No Pharmacy Assigned</span>
                            }
                        </h4>
                        <h5 class="user-role">Role: @Model.UserType.UserTypeName</h5>
                    </div>
                </div>
                <hr />
                <div class="doctor-info">
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>DOB:</strong> @Model.DOB.ToString("yyyy-MM-dd")</p>
                    <p><strong>Phone:</strong> @Model.Phone</p>
                    <p><strong>Address:</strong> @Model.Address, @Model.City</p>
                </div>
            </div>
        </div>
    </div>
</div>
